                <Button Style="{StaticResource leftmenubuttonstyle}" x:Name="SettingsButton" HorizontalAlignment="
                            Stretch"
                        Height="34"
                        FontFamily="Segoe Fluent Icons"
                        FontSize="16"
                        Content="&#xE713;"
                        Padding="0"
                        CornerRadius="5"
                        Background="Transparent"
                        BorderBrush="Transparent" Margin="5,5,5,5" Click="SettingsButton_Click" />

                <Button x:Name="PowerButton" HorizontalAlignment="Stretch"
                        Height="34"
                        Style="{StaticResource leftmenubuttonstyle}"
                        FontFamily="Segoe Fluent Icons"
                        FontSize="16"
                        Content="&#xE7E8;"
                        Padding="0"
                        CornerRadius="5"
                        Background="Transparent"
                        BorderBrush="Transparent" Margin="5,5,5,5">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="HibernateMenuButton" Text="Hibernate">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph=""/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="SleepMenuButton" Text="Sleep">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph=""/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="PowerMenuButton" Text="Power">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph=""/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="RestartMenuButton" Text="Restart">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph=""/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>

                    </Button.Flyout>
                </Button>


            </StackPanel>

        </Grid>

        <StackPanel Grid.Column="2"
                    Padding="27,30,27,0"
                    Spacing="32"
                    Orientation="Vertical">

            <Grid Height="Auto"
                  VerticalAlignment="Top"
                  RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBox Text="More or less useful"
                           
                           Grid.Row="0" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" Padding="3,4,6,6" FontFamily="Segoe UI Variable Display Light" FontSize="14" FontWeight="Bold" />
                <Grid Grid.Row="1"
                      RowSpacing="4"
                      ColumnSpacing="4">

                    <Grid.Resources>
                        <Style TargetType="Button"
                               BasedOn="{StaticResource DefaultButtonStyle}">
                            <Setter Property="Padding"
                                    Value="0" />
                            <Setter Property="CornerRadius"
                                    Value="2" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Stretch" />
                            <Setter Property="VerticalAlignment"
                                    Value="Stretch" />
                        </Style>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="96" />
                        <RowDefinition Height="96" />
                    </Grid.RowDefinitions>

                    <Button Grid.Column="0" CornerRadius="5">
