          Height="650"
          HorizontalAlignment="Left"
          VerticalAlignment="Bottom" Margin="10,0,0,10">

        <Grid.Shadow>
            <ThemeShadow />
        </Grid.Shadow>

        <Grid.ColumnDefinitions>
