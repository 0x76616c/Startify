                        <Grid Width="96" Height="96">
                            <Image Source="/Assets/Edge.png"
                               Width="32"
                               Height="32" />
                            <TextBlock Text="Edge"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Bottom"
                                           FontSize="12" Margin="6,0,0,6" />
                        </Grid>
                    </Button>

                    <Grid HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Grid.Row="1"
                          RowSpacing="4"
                          ColumnSpacing="4">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="46" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

